[Unit]
Description=Simba UI
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill simba
ExecStartPre=-/usr/bin/docker rm simba
ExecStartPre=/usr/bin/docker pull jvliwanag/simba:latest
ExecStart=/usr/bin/docker run --rm --name simba -h simba@%i.service \
  -p 80:80 \
  jvliwanag/simba:latest
ExecStop=/usr/bin/docker stop simba

[X-Fleet]
Conflicts=simba@*.service
